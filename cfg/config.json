{   
    "image_conversion":{
        "enabled": true
    },    
    "image_loading":{
        "enabled": true,
        "file_path": "./data/input/example/MRHead.csv",
        "input_dir": "./data/input/example/",
        "recursive": true
    },
    "image_saving":{
        "enabled": true,
        "input_dir": "./data/input/example/",
        "output_dir": "./data/output/"
    },
    "image_visualization":{
        "enabled": true,
        "output_file": "./data/output/output_file.png"
    },
    "bias_field_correction": {
        "enabled": true,
        "saving_files": true,
        "output_dir": "./data/output",
        "methods": {
            "sitk":{
                "enabled": false,
                "automatic": false,
                "n_iterations_level": [50, 50, 50, 50],
                "convergence_threshold": 0.001,
                "bf_fwhm": 0.15,
                "wiener_noise": 0.01,
                "histogram_bins": 200
            },
            "lapgm":{
                "enabled": true,
                "use_gpu": true,
                "normalize": true,
                "target_intensity": 1000.0,
                "tau": 1.0,
                "n_classes": 3,
                "alpha": 2.0
            }
        }
    },
    "binning":{
        "enabled": false,
        "methods":{
            "fixed_width":{
                "enabled":false,
                "bin_width": 2
            },
            "quantile":{
                "enabled": false,
                "num_bins": 4
            }
        }
    },
    "denoising": {
        "enabled": true,
        "saving_files": true,
        "output_dir": "./data/output",
        "methods": {
            "gaussian": {
                "enabled": true,
                "sigma_gaussian": 1.0    
            },
            "nlm": {
                "enabled": false,
                "search_radius": 3,
                "patch_radius": 1,
                "h": 1.15  
            },
            "tv": {
                "enabled": false,
                "weight": 0.1,
                "channel_axis": null,
                "n_iter_max": 200
            },
            "bilateral": {
                "enabled": false,
                "win_size": 5,
                "sigma_color": 0.1,
                "sigma_spatial": 1.0,
                "bins": 10000,
                "mode": "constant",
                "cval": 0
            },
            "aniso_diffusion": {
                "enabled": false,
                "n_iter": 10,
                "kappa": 50,
                "gamma": 0.1,
                "option": 1
            },
            "wavelet": {
                "enabled": false,
                "wavelet": "db1",
                "sigma_wavelet": null,
                "wavelet_levels": 3,
                "mode": "soft"
            },
            "medfilt": {
                "enabled": false,
                "kernel_size": 3
            }
        }
    },
    "filtering":{
        "enabled": false,
        "methods":{
            "gaussian": {
                "enabled": true,
                "sigma": 1
            },
            "median": {
                "enabled": false,
                "radius": 2
            },
            "bilateral": {
                "enabled": false,
                "domain_sigma": 1,
                "range_sigma": 2
            },
            "otsu":{
                "enabled": false
            }
        }
    },
    "motion_correction":{
        "enabled": false,
        "params":{
        "reference_vol": null 
        }
    },
    "normalization": {
        "enabled": true,
        "saving_files": true,
        "output_dir": "./data/output",
        "methods": {
            "intensity": {        
                "enabled": false,
                "min_value": 0.0,
                "max_value": 1.0,
                "percentiles": [2, 98]
            },
            "zscore": {
                "enabled": false,
                "robust": false
            },
            "histogram": {
                "enabled": false,
                "n_bins": 256,
                "normalize": true
            },
            "whitening": {
                "enabled": false,
                "epsilon": 1e-8
            },
            "min_max": {
                "enabled": true,
                "min_value": 0.0,
                "max_value": 1.0
            }
        }
    },
    "quality_control":{
        "enabled":true,
        "qc_report_path": "./data/output/qc_report.json",
        "expected_dims": [130, 256, 256],
        "expected_voxel_size": [1.0, 1.0, 1.0],
        "min_voxels": 10000,
        "max_aspect_ratio": 4.0,
        "expected_orientation": ["R", "A", "S"],
        "min_snr": 5.0,
        "min_contrast": 0.1
    },
    "registration":{
        "enabled": true,
        "saving_files": true,
        "output_dir": "./data/output",
        "reference": "./data/registration_templates/temp_head.nii.gz",
        "methods": {
            "spm": {
                "enabled": false,
                "bias_regularization": 0.0001,
                "bias_fwhm": 60,
                "sampling_distance": 3,
                "write_wrapped": true,
                "write_deformation": true,
                "jobtype": "estwrite",
                "interpolation": 4
            },
            "itk":{
                "enabled": false
            },
            "fsl":{
                "enabled": false,
                "resolution": 1.0,
                "interp": "trilinear",
                "cost_function": "corratio",
                "dof": 12,
                "search_cost_function": "corratio",
                "search_angles": [-20, 20],
                "search_scales": [0.8, 1.2],
                "bins": 256,
                "init": "geometry"
            },
            "sitk":{
                "enabled": true,
                "histogram_bins": 50,
                "metric_sampling_percentage": 0.01,
                "learning_rate": 1.0,
                "number_of_iterations": 100,
                "convergence_minimum_value": 1e-6,
                "convergence_window_size": 10,
                "shrink_factors": [4, 2, 1],
                "smoothing_sigmas": [2, 1, 0],
                "smoothing_sigmas_in_physical_units": true
            }
        }
    },
    "resampling":{
        "enabled": true,
        "saving_files": true,
        "output_dir": "./data/output",
        "reference": "./data/registration_templates/temp_head.nii.gz",
        "spacing": [1.0,1.0,1.0],
        "methods":{
            "ants":{
                "enabled": false,
                "interpolation": "linear",
                "dimension": 3
            },
            "scipy":{
                "enabled": false,
                "order": 1,
                "mode": "constant",
                "preserve_range": true
            },
            "sitk":{
                "enabled": true,
                "interpolation": "linear"
            },
            "itk":{
                "enabled": false,
                "interpolation": "linear",
                "transform_type": "scale",
                "optimize_memory": true
            }
        }
    },
    "skull_stripping": {
        "enabled": false,
        "methods": {
            "threshold": {
                "enabled": true,
                "value": 100
            },
            "morphological": {
                "enabled": false
            },
            "atlas": {
                "enabled": false,
                "path": "./data/atlas/atlas.nii"
            }
        }
    },
    "slice_timing":{
        "enabled": false,
        "params":{
        "num_slices": 4,
        "tr": 2.0, 
        "ta": 1.9, 
        "slice_order": [1, 3, 5, 2, 4, 6]
        }
    }
}
